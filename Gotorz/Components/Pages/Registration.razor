@page "/register"
@using Gotorz.Models

<EditForm Model="@registerModel" OnValidSubmit="@ValidRegisterSubmit" FormName="registerFormN">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="container">
        <h3>Registration</h3>
    

            <label>First name:</label>
            <InputText @bind-value="registerModel.FirstName"/>

            <label>Last name:</label>
            <InputText @bind-value="registerModel.LastName"/>

            <label>Email: </label>
            <InputText @bind-value="registerModel.Email"/>

            <label>Password: </label>
            <InputText @bind-value="registerModel.Password" type="password"/>

            <label>Phone number: </label>
            <InputNumber @bind-value="registerModel.PhoneNumber"/>

            <button type="submit"> Register</button>


            <p>Already have an account? <a href="/login"> Login</a></p>


    </div>
</EditForm>
@code {
    private RegisterModel registerModel = new RegisterModel();
    private string alertMessage;

    private async Task ValidRegisterSubmit()
    {
        
        // Simulate success
        alertMessage = "Registration successful!";

        // TODO: Save to database or call API here

        // Reset form
        registerModel = new RegisterModel();

    }
}
